<h2>Permissions for <%= @user.email %></h2>
<%= form_tag update_user_permissions_path, :method => :put do %>
	<table>
		<thead>
			<% permissions.each do |name, text| %>
				<th><%= text %></th>
			<% end %>
		</thead>
		<tbody>
			<% @projects.each do |project| %>
				<tr>
					<td><%= project.name %></td>
					<% permissions.each do |name, text| %>
						<td><%= check_box_tag "permissions[#{project.id}][#{name}]", @abililty %>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= submit_tag "Update" %>
<% end %>